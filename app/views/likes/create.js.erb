var resourceDiv = $('#<%= @resource.class.to_s.underscore %>_<%= @resource.id %>');
var oldLikesString = $(resourceDiv).find('.total-likes').text();
var oldLikesNum = parseInt(oldLikesString);
var newLikes = oldLikesNum += 1;
$(resourceDiv).find('.total-likes').text(newLikes);

// trying to get the likes button to highlight when clicked

$(document).ready(function() {
$('.like-button').unbind('click');
  $('.like-button').click(function(){
    $(this).effect('highlight', {color: 'rgb(0,255,0)'}, 2000)
  });
});
